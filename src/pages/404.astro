---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Page Not Found - 404 | Goan Traders" 
  description="Sorry, the page you're looking for couldn't be found. We're working on it! Browse our cement and building materials products instead."
  keywords="404 error, page not found, goan traders, cement dealer goa"
>
  <Header />
  <main class="error-page">
    <div class="container">
      <div class="error-content">

        <!-- 404 Text with Animation -->
        <div class="error-number">
          <span class="digit">4</span>
          <span class="digit">0</span>
          <span class="digit">4</span>
        </div>

        <!-- Error Message -->
        <div class="error-message">
          <h1>Oops! Page Not Found </h1>
          <p>We're sorry, but the page you're looking for doesn't exist yet.</p>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons">
          <a href="/" class="btn btn-primary">
            <svg viewBox="0 0 24 24" width="20" height="20">
              <path fill="currentColor" d="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z"/>
            </svg>
            Back to Home
          </a>
          <a href="/products" class="btn btn-secondary">
            <svg viewBox="0 0 24 24" width="20" height="20">
              <path fill="currentColor" d="M12,18H6V14H12M21,14V12L20,7H4L3,12V14H4V20H14V14H18V20H20V14M20,4H4V6H20V4Z"/>
            </svg>
            View Products
          </a>
          <a href="/contact" class="btn btn-success">
            <svg viewBox="0 0 24 24" width="20" height="20">
              <path fill="currentColor" d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.106"/>
            </svg>
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .error-page {
    min-height: 100vh;
    background: linear-gradient(135deg, #F8FAFC 0%, #E2E8F0 100%);
    display: flex;
    align-items: center;
    padding: 2rem 0;
    position: relative;
    overflow: hidden;
  }

  .error-content {
    text-align: center;
    position: relative;
    z-index: 10;
    animation: fadeInUp 1s ease-out;
  }

  /* Construction Animation */
  .construction-animation {
    position: relative;
    height: 200px;
    margin-bottom: 2rem;
  }

  .crane {
    position: absolute;
    left: 50%;
    top: 20px;
    transform: translateX(-50%);
    width: 120px;
    height: 150px;
  }

  .crane-arm {
    width: 100px;
    height: 4px;
    background: #2563EB;
    position: absolute;
    top: 20px;
    left: 20px;
    transform-origin: left center;
    animation: craneSwing 3s ease-in-out infinite alternate;
  }

  .crane-hook {
    width: 8px;
    height: 40px;
    background: #1D4ED8;
    position: absolute;
    top: 24px;
    right: 0;
    animation: hookBounce 2s ease-in-out infinite;
  }

  .crane-load {
    width: 20px;
    height: 20px;
    background: #F59E0B;
    border-radius: 2px;
    position: absolute;
    top: 64px;
    right: -6px;
    animation: loadSwing 2s ease-in-out infinite;
    box-shadow: 0 2px 8px rgba(245, 158, 11, 0.3);
  }

  .building-blocks {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 4px;
  }

  .block {
    width: 30px;
    height: 20px;
    border-radius: 2px;
    animation: blockRise 2s ease-out;
  }

  .block-1 {
    background: #EF4444;
    animation-delay: 0.5s;
  }

  .block-2 {
    background: #10B981;
    animation-delay: 1s;
  }

  .block-3 {
    background: #3B82F6;
    animation-delay: 1.5s;
  }

  /* 404 Number Animation */
  .error-number {
    font-size: 8rem;
    font-weight: 900;
    color: #1E293B;
    margin: 2rem 0;
    text-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .digit {
    display: inline-block;
    animation: digitBounce 2s ease-in-out infinite;
  }

  .digit:nth-child(1) { animation-delay: 0s; }
  .digit:nth-child(2) { animation-delay: 0.2s; }
  .digit:nth-child(3) { animation-delay: 0.4s; }

  /* Error Message */
  .error-message h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1E293B;
    margin-bottom: 1rem;
    animation: slideInLeft 1s ease-out 0.5s both;
  }

  .error-message p {
    font-size: 1.2rem;
    color: #64748B;
    max-width: 600px;
    margin: 0 auto 3rem;
    line-height: 1.6;
    animation: slideInRight 1s ease-out 0.7s both;
  }

  /* Progress Bar Animation */
  .progress-container {
    max-width: 400px;
    margin: 3rem auto;
    animation: fadeIn 1s ease-out 1s both;
  }

  .progress-label {
    font-size: 1rem;
    font-weight: 600;
    color: #1E293B;
    margin-bottom: 0.5rem;
  }

  .progress-bar {
    width: 100%;
    height: 8px;
    background: #E2E8F0;
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 0.5rem;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #2563EB, #10B981);
    border-radius: 4px;
    animation: progressFill 3s ease-out infinite;
  }

  .progress-text {
    font-size: 0.9rem;
    color: #64748B;
    animation: textPulse 2s ease-in-out infinite;
  }

  /* Action Buttons */
  .action-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 3rem;
    animation: slideInUp 1s ease-out 1.2s both;
  }

  .btn {
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    min-width: 160px;
    justify-content: center;
  }

  .btn-primary {
    background: #2563EB;
    color: white;
    box-shadow: 0 4px 6px rgba(37, 99, 235, 0.2);
  }

  .btn-primary:hover {
    background: #1D4ED8;
    transform: translateY(-2px);
    box-shadow: 0 6px 8px rgba(37, 99, 235, 0.3);
  }

  .btn-secondary {
    background: #F1F5F9;
    color: #1E293B;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    border: 1px solid #E2E8F0;
  }

  .btn-secondary:hover {
    background: #E2E8F0;
    transform: translateY(-2px);
    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.1);
  }

  .btn-success {
    background: #10B981;
    color: white;
    box-shadow: 0 4px 6px rgba(16, 185, 129, 0.2);
  }

  .btn-success:hover {
    background: #059669;
    transform: translateY(-2px);
    box-shadow: 0 6px 8px rgba(16, 185, 129, 0.3);
  }

  /* Floating Particles */
  .particles {
    position: absolute;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .particle {
    position: absolute;
    background: #2563EB;
    border-radius: 50%;
    opacity: 0.6;
    animation: float 6s ease-in-out infinite;
  }

  .particle-1 {
    width: 8px;
    height: 8px;
    top: 20%;
    left: 10%;
    animation-delay: 0s;
  }

  .particle-2 {
    width: 12px;
    height: 12px;
    top: 60%;
    right: 15%;
    animation-delay: 1s;
  }

  .particle-3 {
    width: 6px;
    height: 6px;
    top: 80%;
    left: 20%;
    animation-delay: 2s;
  }

  .particle-4 {
    width: 10px;
    height: 10px;
    top: 30%;
    right: 25%;
    animation-delay: 3s;
  }

  .particle-5 {
    width: 14px;
    height: 14px;
    top: 70%;
    left: 80%;
    animation-delay: 4s;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes craneSwing {
    0% { transform: rotate(-5deg); }
    100% { transform: rotate(5deg); }
  }

  @keyframes hookBounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(10px); }
  }

  @keyframes loadSwing {
    0%, 100% { transform: translateY(0) rotate(-2deg); }
    50% { transform: translateY(5px) rotate(2deg); }
  }

  @keyframes blockRise {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes digitBounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-10px); }
    60% { transform: translateY(-5px); }
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes progressFill {
    0% { width: 0%; }
    50% { width: 75%; }
    100% { width: 0%; }
  }

  @keyframes textPulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.6; }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    33% { transform: translateY(-20px) rotate(120deg); }
    66% { transform: translateY(20px) rotate(240deg); }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .error-number {
      font-size: 4rem;
    }

    .error-message h1 {
      font-size: 1.8rem;
    }

    .error-message p {
      font-size: 1rem;
      padding: 0 1rem;
    }

    .action-buttons {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 280px;
    }

    .construction-animation {
      height: 150px;
      margin-bottom: 1rem;
    }

    .crane {
      width: 80px;
      height: 100px;
    }

    .crane-arm {
      width: 60px;
    }
  }

  @media (max-width: 480px) {
    .error-page {
      padding: 1rem 0;
    }

    .error-number {
      font-size: 3rem;
      margin: 1rem 0;
    }

    .error-message h1 {
      font-size: 1.5rem;
    }

    .construction-animation {
      height: 120px;
    }
  }
</style>
