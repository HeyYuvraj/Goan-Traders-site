---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Page Not Found - 404 | Goan Traders" 
  description="Sorry, the page you're looking for couldn't be found.Browse our cement and building materials products instead."
  keywords="404 error, page not found, goan traders, cement dealer goa"
>
  <Header />
  <main class="error-page">
    <div class="container">
      <div class="error-content">

        <div class="lively-construction">
          <div class="worker">
            <div class="worker-body"></div>
            <div class="worker-helmet"></div>
            <div class="worker-arm">
              <div class="hammer"></div>
            </div>
          </div>
          <div class="construction-base">
             <div class="spark spark1"></div>
             <div class="spark spark2"></div>
             <div class="spark spark3"></div>
          </div>
        </div>

        <div class="error-number">
          <span class="digit">4</span>
          <span class="digit">0</span>
          <span class="digit">4</span>
        </div>

        <div class="error-message">
          <h1>Oops! This Page is Not Available</h1>
          <p>We're sorry, but the page you're looking for doesn't exist yet. We're working hard to build it!</p>
        </div>

        <div class="action-buttons">
          <a href="/" class="btn btn-primary">
            <svg viewBox="0 0 24 24" width="20" height="20">
              <path fill="currentColor" d="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z"/>
            </svg>
            Back to Home
          </a>
          <a href="/products" class="btn btn-secondary">
            <svg viewBox="0 0 24 24" width="20" height="20">
              <path fill="currentColor" d="M12,18H6V14H12M21,14V12L20,7H4L3,12V14H4V20H14V14H18V20H20V14M20,4H4V6H20V4Z"/>
            </svg>
            View Products
          </a>
          <a href="/contact" class="btn btn-success">
            <svg viewBox="0 0 24 24" width="20" height="20">
              <path fill="currentColor" d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.106"/>
            </svg>
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .error-page {
    min-height: 100vh;
    background: linear-gradient(135deg, #F8FAFC 0%, #E2E8F0 100%);
    display: flex;
    align-items: center;
    justify-content: center; /* Center content vertically */
    padding: 2rem 0;
    position: relative;
    overflow: hidden;
  }

  .error-content {
    text-align: center;
    position: relative;
    z-index: 10;
    animation: fadeInUp 1s ease-out;
  }

  /* New Lively Construction Animation */
  .lively-construction {
    position: relative;
    height: 150px;
    width: 200px;
    margin: 0 auto 1rem;
  }

  .worker {
    position: absolute;
    bottom: 20px;
    left: 40px;
    width: 50px;
    height: 70px;
    animation: workerBob 2s ease-in-out infinite;
  }

  .worker-body {
    width: 30px;
    height: 45px;
    background: #3B82F6; /* Blue shirt */
    position: absolute;
    bottom: 0;
    left: 10px;
    border-radius: 5px 5px 0 0;
  }

  .worker-helmet {
    width: 34px;
    height: 20px;
    background: #F59E0B; /* Yellow helmet */
    position: absolute;
    top: -10px;
    left: 8px;
    border-radius: 10px 10px 0 0;
  }
  
  .worker-arm {
    width: 15px;
    height: 35px;
    background: #3B82F6;
    position: absolute;
    top: 15px;
    right: -5px;
    transform-origin: top center;
    animation: hammerSwing 0.5s ease-in-out infinite;
  }

  .hammer {
    width: 25px;
    height: 8px;
    background: #94A3B8; /* Gray hammer head */
    position: absolute;
    top: 25px;
    right: -10px;
    border-radius: 2px;
  }

  .construction-base {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 20px;
    background: #CBD5E1;
    border-top: 5px solid #94A3B8;
  }
  
  .spark {
    position: absolute;
    width: 5px;
    height: 5px;
    background: #FBBF24;
    border-radius: 50%;
    bottom: 20px;
    right: 50px;
    opacity: 0;
    animation: sparkFly 0.5s ease-out infinite;
  }
  .spark2 { animation-delay: 0.1s; }
  .spark3 { animation-delay: 0.3s; }

  /* 404 Number Animation */
  .error-number {
    font-size: 8rem;
    font-weight: 900;
    color: #1E293B;
    margin: 0; /* Adjusted margin */
    text-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .digit {
    display: inline-block;
    animation: digitBounce 2s ease-in-out infinite;
  }

  .digit:nth-child(1) { animation-delay: 0s; }
  .digit:nth-child(2) { animation-delay: 0.2s; }
  .digit:nth-child(3) { animation-delay: 0.4s; }

  /* Error Message */
  .error-message h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1E293B;
    margin-bottom: 1rem;
    animation: slideInLeft 1s ease-out 0.5s both;
  }

  .error-message p {
    font-size: 1.2rem;
    color: #64748B;
    max-width: 600px;
    margin: 0 auto 3rem;
    line-height: 1.6;
    animation: slideInRight 1s ease-out 0.7s both;
  }

  /* Action Buttons */
  .action-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 3rem;
    animation: slideInUp 1s ease-out 1.2s both;
  }

  .btn {
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    min-width: 160px;
    justify-content: center;
  }

  .btn-primary {
    background: #2563EB;
    color: white;
    box-shadow: 0 4px 6px rgba(37, 99, 235, 0.2);
  }

  .btn-primary:hover {
    background: #1D4ED8;
    transform: translateY(-2px);
    box-shadow: 0 6px 8px rgba(37, 99, 235, 0.3);
  }

  .btn-secondary {
    background: #F1F5F9;
    color: #1E293B;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    border: 1px solid #E2E8F0;
  }

  .btn-secondary:hover {
    background: #E2E8F0;
    transform: translateY(-2px);
    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.1);
  }

  .btn-success {
    background: #10B981;
    color: white;
    box-shadow: 0 4px 6px rgba(16, 185, 129, 0.2);
  }

  .btn-success:hover {
    background: #059669;
    transform: translateY(-2px);
    box-shadow: 0 6px 8px rgba(16, 185, 129, 0.3);
  }

  /* Animations */
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(50px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes workerBob {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  @keyframes hammerSwing {
    0%, 100% { transform: rotate(0deg); }
    50% { transform: rotate(-45deg); }
  }

  @keyframes sparkFly {
    0% { transform: translate(0, 0) scale(0); opacity: 1; }
    100% { transform: translate(-30px, -40px) scale(1); opacity: 0; }
  }

  @keyframes digitBounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-10px); }
    60% { transform: translateY(-5px); }
  }

  @keyframes slideInLeft {
    from { opacity: 0; transform: translateX(-50px); }
    to { opacity: 1; transform: translateX(0); }
  }

  @keyframes slideInRight {
    from { opacity: 0; transform: translateX(50px); }
    to { opacity: 1; transform: translateX(0); }
  }

  @keyframes slideInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .error-number { font-size: 6rem; }
    .error-message h1 { font-size: 1.8rem; }
    .error-message p { font-size: 1rem; padding: 0 1rem; }
    .action-buttons { flex-direction: column; align-items: center; }
    .btn { width: 100%; max-width: 280px; }
  }

  @media (max-width: 480px) {
    .error-page { padding: 1rem 0; }
    .error-number { font-size: 5rem; margin: 1rem 0; }
    .error-message h1 { font-size: 1.5rem; }
    .lively-construction { height: 120px; }
  }
</style>