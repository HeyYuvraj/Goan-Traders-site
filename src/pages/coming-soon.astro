<style>
  .coming-soon-page {
    min-height: 100vh;
    background: linear-gradient(135deg, #5475a0 0%, #6f8db5 30%, #6471ab 60%, #6675c4 100%);
    background-size: 400% 400%;
    animation: gradientShift 8s ease infinite;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
    position: relative;
    overflow: hidden;
  }
  
  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    25% { background-position: 100% 25%; }
    50% { background-position: 100% 75%; }
    75% { background-position: 0% 75%; }
    100% { background-position: 0% 50%; }
  }
  
  /* Enhanced animated background */
  .animated-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    overflow: hidden;
    pointer-events: none;
  }
  
  /* More dynamic floating particles */
  .particle {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.3), rgba(147, 197, 253, 0.3));
    animation: floatParticle 15s infinite ease-in-out;
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.2);
  }
  
  .particle-1 { width: 8px; height: 8px; top: 10%; left: 10%; animation-duration: 18s; animation-delay: 0s; }
  .particle-2 { width: 12px; height: 12px; top: 20%; right: 15%; animation-duration: 22s; animation-delay: 2s; }
  .particle-3 { width: 6px; height: 6px; bottom: 30%; left: 20%; animation-duration: 16s; animation-delay: 4s; }
  .particle-4 { width: 10px; height: 10px; bottom: 20%; right: 25%; animation-duration: 20s; animation-delay: 6s; }
  .particle-5 { width: 14px; height: 14px; top: 50%; left: 5%; animation-duration: 19s; animation-delay: 1s; }
  .particle-6 { width: 9px; height: 9px; top: 70%; right: 10%; animation-duration: 17s; animation-delay: 3s; }
  .particle-7 { width: 11px; height: 11px; top: 35%; left: 80%; animation-duration: 21s; animation-delay: 5s; }
  .particle-8 { width: 7px; height: 7px; bottom: 40%; left: 70%; animation-duration: 23s; animation-delay: 7s; }
  .particle-9 { width: 13px; height: 13px; top: 80%; left: 30%; animation-duration: 25s; animation-delay: 2.5s; }
  .particle-10 { width: 5px; height: 5px; top: 15%; left: 60%; animation-duration: 15s; animation-delay: 4.5s; }
  
  @keyframes floatParticle {
    0% { transform: translateY(0) translateX(0) rotate(0deg) scale(1); opacity: 0; }
    5% { opacity: 1; }
    25% { transform: translateY(-60px) translateX(30px) rotate(90deg) scale(1.3); opacity: 0.9; }
    50% { transform: translateY(-40px) translateX(-20px) rotate(180deg) scale(0.8); opacity: 0.7; }
    75% { transform: translateY(-80px) translateX(50px) rotate(270deg) scale(1.1); opacity: 0.9; }
    95% { opacity: 1; }
    100% { transform: translateY(0) translateX(0) rotate(360deg) scale(1); opacity: 0; }
  }
  
  /* Enhanced construction elements */
  .construction-element {
    position: absolute;
    opacity: 0.15;
    animation: constructionMove 25s infinite ease-in-out;
  }
  
  .crane {
    width: 50px;
    height: 70px;
    background: linear-gradient(135deg, #FCD34D, #F59E0B);
    top: 15%;
    right: 8%;
    clip-path: polygon(40% 0%, 60% 0%, 80% 100%, 20% 100%);
    animation-delay: 0s;
    position: relative;
  }
  
  .crane-arm {
    position: absolute;
    width: 40px;
    height: 3px;
    background: #F59E0B;
    top: 15px;
    right: -20px;
    transform-origin: left center;
    animation: craneSwing 8s infinite ease-in-out;
  }
  
  .crane-hook {
    position: absolute;
    width: 4px;
    height: 15px;
    background: #DC2626;
    top: 28px;
    right: -18px;
    animation: hookBounce 3s infinite ease-in-out;
  }
  
  @keyframes craneSwing {
    0%, 100% { transform: rotate(0deg); }
    50% { transform: rotate(15deg); }
  }
  
  @keyframes hookBounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(8px); }
  }
  
  .truck {
    width: 40px;
    height: 25px;
    background: linear-gradient(135deg, #EF4444, #DC2626);
    bottom: 25%;
    left: 15%;
    border-radius: 6px;
    animation-delay: 12s;
    position: relative;
  }
  
  .truck-wheel {
    position: absolute;
    width: 8px;
    height: 8px;
    background: #1F2937;
    border-radius: 50%;
    bottom: -4px;
    animation: wheelSpin 2s infinite linear;
  }
  
  .wheel-1 { left: 5px; }
  .wheel-2 { right: 5px; animation-delay: 0.1s; }
  
  @keyframes wheelSpin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  .building {
    width: 35px;
    height: 50px;
    background: linear-gradient(135deg, #64748B, #475569);
    top: 55%;
    right: 20%;
    border-radius: 4px;
    animation-delay: 8s;
    position: relative;
  }
  
  .building-window {
    width: 6px;
    height: 6px;
    background: #FCD34D;
    position: absolute;
    animation: windowBlink 4s infinite ease-in-out;
  }
  
  .building-window:nth-child(1) { top: 8px; left: 6px; animation-delay: 0s; }
  .building-window:nth-child(2) { top: 8px; right: 6px; animation-delay: 1.3s; }
  .building-window:nth-child(3) { top: 20px; left: 6px; animation-delay: 2.6s; }
  
  @keyframes windowBlink {
    0%, 90% { opacity: 1; }
    95% { opacity: 0.3; }
    100% { opacity: 1; }
  }
  
  @keyframes constructionMove {
    0% { transform: translateY(0) rotate(0deg); }
    20% { transform: translateY(-15px) rotate(2deg); }
    40% { transform: translateY(-5px) rotate(-1deg); }
    60% { transform: translateY(-20px) rotate(3deg); }
    80% { transform: translateY(-8px) rotate(-2deg); }
    100% { transform: translateY(0) rotate(0deg); }
  }
  
  /* Enhanced waves */
  .wave {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.05), rgba(147, 197, 253, 0.05));
    border-radius: 50% 50% 0 0;
    transform-origin: bottom;
    animation: wave 6s infinite ease-in-out;
  }
  
  .wave-1 { height: 100px; animation-delay: 0s; opacity: 0.8; }
  .wave-2 { height: 80px; animation-delay: 2s; opacity: 0.6; }
  .wave-3 { height: 60px; animation-delay: 4s; opacity: 0.4; }
  
  @keyframes wave {
    0%, 100% { transform: scaleX(1) scaleY(1) rotateZ(0deg); }
    25% { transform: scaleX(1.1) scaleY(0.9) rotateZ(0.5deg); }
    50% { transform: scaleX(0.9) scaleY(1.1) rotateZ(-0.5deg); }
    75% { transform: scaleX(1.05) scaleY(0.95) rotateZ(0.3deg); }
  }
  
  /* New floating geometric shapes */
  .floating-shape {
    position: absolute;
    opacity: 0.1;
    animation: shapeFloat 20s infinite ease-in-out;
  }
  
  .shape-1 {
    width: 30px;
    height: 30px;
    background: linear-gradient(45deg, #F59E0B, #EF4444);
    clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
    top: 25%;
    left: 70%;
    animation-delay: 0s;
  }
  
  .shape-2 {
    width: 25px;
    height: 25px;
    background: linear-gradient(45deg, #3B82F6, #8B5CF6);
    transform: rotate(45deg);
    top: 65%;
    left: 25%;
    animation-delay: 5s;
  }
  
  .shape-3 {
    width: 35px;
    height: 35px;
    background: linear-gradient(45deg, #10B981, #059669);
    border-radius: 50%;
    top: 40%;
    right: 30%;
    animation-delay: 10s;
  }
  
  .shape-4 {
    width: 28px;
    height: 28px;
    background: linear-gradient(45deg, #F472B6, #EC4899);
    clip-path: polygon(25% 0%, 75% 0%, 100% 50%, 75% 100%, 25% 100%, 0% 50%);
    bottom: 45%;
    right: 15%;
    animation-delay: 15s;
  }
  
  @keyframes shapeFloat {
    0% { transform: translateY(0) rotate(0deg) scale(1); }
    25% { transform: translateY(-30px) rotate(90deg) scale(1.2); }
    50% { transform: translateY(-20px) rotate(180deg) scale(0.8); }
    75% { transform: translateY(-40px) rotate(270deg) scale(1.1); }
    100% { transform: translateY(0) rotate(360deg) scale(1); }
  }
  
  .container {
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    position: relative;
    z-index: 10;
  }
  
  .content-box {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-radius: 20px;
    padding: 3rem 2rem;
    text-align: center;
    box-shadow: 
      0 20px 40px rgba(0, 0, 0, 0.1),
      0 0 0 1px rgba(255, 255, 255, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
    border: 1px solid rgba(37, 99, 235, 0.1);
    position: relative;
    overflow: hidden;
    animation: contentBoxFloat 6s infinite ease-in-out;
  }
  
  @keyframes contentBoxFloat {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .content-box::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    animation: shimmer 2s infinite;
  }
  
  @keyframes shimmer {
    0% { left: -100%; }
    100% { left: 100%; }
  }
  
  .logo-section {
    margin-bottom: 2rem;
    animation: logoEntrance 1.2s ease-out;
    position: relative;
  }
  
  .logo-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.1) 0%, transparent 70%);
    border-radius: 50%;
    animation: logoGlow 3s infinite ease-in-out;
  }
  
  @keyframes logoGlow {
    0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.5; }
    50% { transform: translate(-50%, -50%) scale(1.2); opacity: 0.8; }
  }
  
  @keyframes logoEntrance {
    0% { opacity: 0; transform: translateY(-30px) scale(0.8); }
    60% { transform: translateY(5px) scale(1.05); }
    100% { opacity: 1; transform: translateY(0) scale(1); }
  }
  
  .logo {
    max-width: 160px;
    height: auto;
    filter: drop-shadow(0 10px 20px rgba(59, 130, 246, 0.2));
    animation: logoFloat 4s infinite ease-in-out;
    position: relative;
    z-index: 2;
  }
  
  @keyframes logoFloat {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-8px) rotate(1deg); }
  }
  
  h1 {
    font-size: 3rem;
    font-weight: 700;
    color: #1E40AF;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 50%, #8B5CF6 100%);
    background-size: 300% 300%;
    animation: colorFlow 3s ease infinite;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    perspective: 1000px;
  }
  
  .letter {
    display: inline-block;
    animation-delay: var(--delay);
  }
  
  .space {
    display: inline-block;
    width: 0.3em;
  }
  
  @keyframes letterDance {
    0% { opacity: 0; transform: translateY(30px) rotateX(90deg); }
    50% { transform: translateY(-10px) rotateX(0deg); }
    100% { opacity: 1; transform: translateY(0) rotateX(0deg); }
  }
  
  @keyframes letterHover {
    0%, 100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-10px) scale(1.1); }
  }
  
  @keyframes colorFlow {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  
  .tagline {
    font-size: 1.25rem;
    color: #64748B;
    margin-bottom: 3rem;
    animation: taglineReveal 1s ease-out 1.2s both;
  }
  
  @keyframes taglineReveal {
    0% { opacity: 0; transform: translateY(20px) scale(0.9); }
    100% { opacity: 1; transform: translateY(0) scale(1); }
  }
  
