    // Improved Product Carousel functionality for better responsiveness
    function initCarousel(carouselId, prevBtnId, nextBtnId, dotsId) {
      const carousel = document.getElementById(carouselId);
      const prevBtn = document.getElementById(prevBtnId);
      const nextBtn = document.getElementById(nextBtnId);
      const dotsContainer = document.getElementById(dotsId);
      
      if (!carousel || !prevBtn || !nextBtn || !dotsContainer) {
        console.warn(`Carousel elements not found for ${carouselId}`);
        return;
      }
      
      const cards = carousel.querySelectorAll('.product-card');
      if (cards.length === 0) {
        console.warn(`No cards found in carousel ${carouselId}`);
        return;
      }
      
      let cardWidth = 0;
      const cardCount = cards.length;
      let currentIndex = 0;
      
      // Function to calculate card width based on current viewport
      function calculateCardWidth() {
        // Get the first card's computed width including margins
        const firstCard = carousel.querySelector('.product-card');
        if (!firstCard) return 0;
        
        const cardStyles = window.getComputedStyle(firstCard);
        const cardWidth = firstCard.offsetWidth;
        const marginLeft = parseFloat(cardStyles.marginLeft) || 0;
        const marginRight = parseFloat(cardStyles.marginRight) || 0;
        
        // Add gap value (from .products-carousel gap property)
        return cardWidth + marginLeft + marginRight + 24; // 24px for the gap
      }
      
      // Create dots
      function createDots() {
        const visibleCards = getVisibleCards();
        const dotCount = Math.ceil(cardCount / visibleCards);
        
        dotsContainer.innerHTML = '';
        for (let i = 0; i < dotCount; i++) {
          const dot = document.createElement('button');
          dot.classList.add('carousel-dot');
          dot.setAttribute('aria-label', `Go to slide group ${i + 1}`);
          dot.addEventListener('click', () => goToSlide(i * visibleCards));
          dotsContainer.appendChild(dot);
        }
        
        // Mark first dot as active
        const firstDot = dotsContainer.querySelector('.carousel-dot');
        if (firstDot) firstDot.classList.add('active');
      }
      
      // Update UI state
      function updateState() {
        // Calculate current dot index based on visible cards
        const visibleCards = getVisibleCards();
        const dotIndex = Math.floor(currentIndex / visibleCards);
        
        // Update dots
        const dots = dotsContainer.querySelectorAll('.carousel-dot');
        dots.forEach((dot, i) => {
          dot.classList.toggle('active', i === dotIndex);
        });
        
        // Update buttons
        prevBtn.disabled = currentIndex <= 0;
        nextBtn.disabled = currentIndex >= cardCount - getVisibleCards();
        
        // Apply visual state to buttons
        prevBtn.style.opacity = prevBtn.disabled ? '0.5' : '1';
        nextBtn.style.opacity = nextBtn.disabled ? '0.5' : '1';
      }
      
      // Get number of visible cards based on viewport
      function getVisibleCards() {
        const width = window.innerWidth;
        if (width >= 1024) return 3;
        if (width >= 768) return 2;
        return 1;
      }
      
      // Navigate to specific slide
      function goToSlide(index) {
        currentIndex = Math.max(0, Math.min(index, cardCount - 1));
        cardWidth = calculateCardWidth();
        
        // Calculate scroll position
        const scrollPosition = currentIndex * cardWidth;
        
        // Use scrollTo with smooth behavior
        carousel.scrollTo({
          left: scrollPosition,
          behavior: 'smooth'
        });
        
        updateState();
      }
      
      // Previous slide group
      prevBtn.addEventListener('click', () => {
        const visibleCards = getVisibleCards();
        goToSlide(Math.max(0, currentIndex - visibleCards));
      });
      
      // Next slide group
      nextBtn.addEventListener('click', () => {
        const visibleCards = getVisibleCards();
        goToSlide(Math.min(cardCount - visibleCards, currentIndex + visibleCards));
      });
      
      // Update on resize
      let resizeTimer;
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimer);
        resizeTimer = setTimeout(() => {
          // Recalculate card width and update dots
          cardWidth = calculateCardWidth();
          createDots();
          
          // Adjust current index to align with visible cards
          const visibleCards = getVisibleCards();
          const newIndex = Math.floor(currentIndex / visibleCards) * visibleCards;
          goToSlide(newIndex);
        }, 200);
      });
      
      // Handle carousel scroll events to sync dots
      carousel.addEventListener('scroll', () => {
        if (cardWidth === 0) cardWidth = calculateCardWidth();
        if (cardWidth === 0) return;
        
        const scrollPosition = carousel.scrollLeft;
        const newIndex = Math.round(scrollPosition / cardWidth);
        
        if (newIndex !== currentIndex && newIndex < cardCount) {
          currentIndex = newIndex;
          updateState();
        }
      });
      
      // Initialize
      cardWidth = calculateCardWidth();
      createDots();
      updateState();
      
      // Initial positioning (important for mobile)
      setTimeout(() => {
        cardWidth = calculateCardWidth();
        updateState();
      }, 300);
    }
    
