---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const API_KEY = "Add api key here re Boiii";
const place_id = "Add place id  key here re Boiii";

let reviews = [];

try {
  const res = await fetch(
    `https://maps.googleapis.com/maps/api/place/details/json?place_id=${"ADD PLACE ID INSIDE QUOTES"}&fields=reviews,rating,user_ratings_total&key=${"ADD API INSIDE QUOTES"}`
  );
  const data = await res.json();

  if (data.result?.reviews) {
    reviews = data.result.reviews;
  }
} catch (err) {
  console.error("Error fetching reviews:", err);
}
---

<Layout 
  title="Customer Reviews - Goa Traders Cement & Building Materials Supplier" 
  description="Read genuine customer reviews for Goa Traders. See why we're the most trusted cement supplier in Goa with 5-star ratings for quality, delivery, and service."
  keywords="goa traders reviews, cement supplier reviews goa, customer testimonials, building materials feedback, jk cement dealer reviews, best cement supplier goa"
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="reviews-hero">
      <div class="container">
        <div class="hero-content">
          <h1>Customer Reviews</h1>
          <p>See what our satisfied customers say about our cement and building materials service</p>
          <div class="rating-summary">
            <div class="stars">
              {Array(5).fill(0).map(() => (
                <svg viewBox="0 0 24 24" width="32" height="32"><path fill="currentColor" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
              ))}
            </div>
            <span class="rating-text">4.9/5 based on 150+ reviews</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Reviews Carousel -->
    <section class="reviews-section">
      <div class="container">
        <h2 class="section-title">See how we’ve helped projects just like yours succeed</h2>

        <div class="carousel-box">
          <div class="carousel-wrapper">
            <div class="reviews-carousel">
  {reviews.length > 0 ? (
    <>
      {reviews.concat(reviews).map((r, index) => (
        <div class="review-card" key={index}>
          <div class="review-header">
            <img src={r.profile_photo_url || '/default-avatar.png'} alt={r.author_name} class="review-avatar" />
            <div>
              <h3 class="review-name">{r.author_name}</h3>
              <p class="review-date">{r.relative_time_description}</p>
            </div>
          </div>
          <p class="review-stars">{"★".repeat(r.rating)}</p>
          <p class="review-text">{r.text}</p>
        </div>
      ))}
    </>
  ) : (
    <p>No reviews found.</p>
  )}
</div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  .reviews-hero {
    background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 100%);
    color: white;
    padding: 6rem 0 4rem;
    text-align: center;
  }
  .hero-content h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }
  .rating-summary {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-top: 1rem;
  }
  .stars svg {
    color: #FBBF24;
  }
  .reviews-section {
    padding: 60px 20px;
    text-align: center;
  }
  .section-title {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 20px;
  }

  /* Curved border box */
  .carousel-box {
    background: white;
    border-radius: 20px;
    padding: 20px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    overflow: hidden;
  }

  /* Carousel wrapper */
  .carousel-wrapper {
    position: relative;
    overflow: hidden;
    border-radius: 20px;
    background: #f9f9f9;
    padding: 15px;
  }

  /* Continuous carousel */
  .reviews-carousel {
  display: flex;
  gap: 20px;
  animation: scrollReviews 40s linear infinite;
}

@keyframes scrollReviews {
  from { transform: translateX(0); }
  to { transform: translateX(-50%); } /* only half, because list is doubled */
}

.review-card {
  flex: 0 0 300px;
  background: #fff;
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
}
  .review-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.2);
  }
  .review-header {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .review-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
  }
  .review-name {
    font-weight: bold;
    margin: 0;
  }
  .review-date {
    font-size: 0.85rem;
    color: #777;
    margin: 0;
  }
  .review-stars {
    color: gold;
    font-size: 1.2rem;
    margin: 10px 0;
  }
  .review-text {
    font-size: 0.95rem;
    color: #333;
    line-height: 1.4;
  }
</style>
