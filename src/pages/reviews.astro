---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Customer Reviews - Goa Traders Cement & Building Materials Supplier" 
  description="Read genuine customer reviews for Goa Traders. See why we're the most trusted cement supplier in Goa with 5-star ratings for quality, delivery, and service."
  keywords="goa traders reviews, cement supplier reviews goa, customer testimonials, building materials feedback, jk cement dealer reviews, best cement supplier goa"
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="reviews-hero">
      <div class="container">
        <div class="hero-content">
          <h1>Customer Reviews</h1>
          <p>See what our satisfied customers say about our cement and building materials service</p>
          <div class="rating-summary">
            <div class="stars">
              {Array(5).fill(0).map(() => (
                <svg viewBox="0 0 24 24" width="32" height="32">
                  <path fill="currentColor" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              ))}
            </div>
            <span class="rating-text">4.9/5 based on 150+ reviews</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Reviews Section -->
    <section class="reviews-section">
      <div class="container">
        <h2 class="section-title">See how weâ€™ve helped projects just like yours succeed</h2>

        <div class="carousel-box">
          <!-- Elfsight Google Reviews Embed -->
          <script src="https://elfsightcdn.com/platform.js" async></script>
          <div 
            class="elfsight-app-0e31b258-5ad6-46df-a148-195adf0f876b" 
            data-elfsight-app-lazy
            style="width: 100%;"
          ></div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  .reviews-hero {
    background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 100%);
    color: white;
    padding: 6rem 0 4rem;
    text-align: center;
  }
  .hero-content h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }
  .rating-summary {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-top: 1rem;
  }
  .stars svg {
    color: #FBBF24;
  }
  .reviews-section {
    padding: 60px 20px;
    text-align: center;
  }
  .section-title {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 20px;
  }

  /* Curved border box */
  .carousel-box {
    background: white;
    border-radius: 20px;
    padding: 20px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    overflow: hidden;
  }
</style>
